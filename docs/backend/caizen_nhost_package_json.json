{
  "name": "caizen-platform",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "SÃ¤ker fordonsplattform med privacy-first design - NHOST Backend",
  "author": "CaiZen Team",
  "license": "PROPRIETARY",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "type-check": "tsc --noEmit",
    "security:audit": "npm audit && npm audit signatures",
    "setup": "chmod +x scripts/setup.sh && ./scripts/setup.sh",
    "prepare": "husky install",
    "codegen": "graphql-codegen --config codegen.yml",
    "nhost:dev": "nhost dev",
    "nhost:logs": "nhost logs",
    "db:migrate": "nhost run db migrate apply",
    "db:seed": "nhost run db seed apply",
    "db:console": "nhost run hasura console"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "@nhost/react": "^1.13.3",
    "@nhost/nhost-js": "^2.2.3",
    "@apollo/client": "^3.8.8",
    "graphql": "^16.8.1",
    "lucide-react": "^0.263.1",
    "leaflet": "^1.9.4",
    "react-leaflet": "^4.2.1",
    "tesseract.js": "^5.0.4",
    "recharts": "^2.10.3",
    "framer-motion": "^10.16.16",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.2.0",
